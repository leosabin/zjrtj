<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teleop_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context=".match.ScoutingFlowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:text="Actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/actions"
                    android:layout_gravity="center"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="Collect Balls"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/startcollect"
                        android:text="Start"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />

                    <Button
                        android:id="@+id/pausecollect"
                        android:text="Pause"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/collectballstimereturn"
                        android:inputType="text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="Shoots High"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/startShootHigh"
                        android:text="Start"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <Button
                        android:id="@+id/pauseShootHigh"
                        android:text="Pause"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <EditText
                        android:text="0:00:000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoothightimereturn" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="        Defense"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/startDefense"
                        android:text="Start"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <Button
                        android:id="@+id/pauseDefense"
                        android:text="Pause"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <EditText
                        android:text="0:00:000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/defensetimereturn" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="            Climb"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/startClimb"
                        android:text="Start"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <Button
                        android:id="@+id/pauseClimb"
                        android:text="Pause"
                        android:layout_height="40dp"
                        android:layout_width="120dp" />
                    <EditText
                        android:text="0:00:000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/climbtimereturn" />

                </LinearLayout>

            </LinearLayout>

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterHighGoalAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="76dp"
                android:textSize="18sp"
                android:layout_weight="7.85"
                android:layout_gravity="center">
            </com.team980.thunderscout.util.CounterCompoundView>

            <Space
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:text="Gears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gears"
                    android:layout_gravity="center"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="Collect Gears"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Chute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chute"
                            android:layout_gravity="center"
                            android:textAlignment="center" />

                        <com.team980.thunderscout.util.CounterCompoundView
                            android:id="@+id/teleop_counterCollectGearsChute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:layout_weight="7.85"
                            android:layout_gravity="center">
                        </com.team980.thunderscout.util.CounterCompoundView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/floor"
                            android:layout_gravity="center"
                            android:textAlignment="center" />

                        <com.team980.thunderscout.util.CounterCompoundView
                            android:id="@+id/teleop_counterCollectGearsFloor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:layout_weight="7.85"
                            android:layout_gravity="center">
                        </com.team980.thunderscout.util.CounterCompoundView>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="Deliver Gears"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.team980.thunderscout.util.CounterCompoundView
                            android:id="@+id/teleop_counterDeliverGears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:layout_weight="7.85"
                            android:layout_gravity="center">
                        </com.team980.thunderscout.util.CounterCompoundView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="Score Gears"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.team980.thunderscout.util.CounterCompoundView
                            android:id="@+id/teleop_counterScoreGears"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:layout_weight="7.85"
                            android:layout_gravity="center">
                        </com.team980.thunderscout.util.CounterCompoundView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dump1"
                    android:text="radio buttons">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump1rb0"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="1-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump1rb1"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="16-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump1rb2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="31-45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump1rb3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump1rb4"
                        android:layout_weight="1" />

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dump2"
                    android:text="radio buttons">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump2rb0"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="1-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump2rb1"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="16-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump2rb2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="31-45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump2rb3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump2rb4"
                        android:layout_weight="1" />

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dump3"
                    android:text="radio buttons">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump3rb0"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="1-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump3rb1"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="16-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump3rb2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="31-45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump3rb3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump3rb4"
                        android:layout_weight="1" />

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dump4"
                    android:text="radio buttons">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump4rb0"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="1-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump4rb1"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="16-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump4rb2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="31-45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump4rb3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump4rb4"
                        android:layout_weight="1" />

                </RadioGroup>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dump5"
                    android:text="radio buttons">

                    <RadioButton
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump5rb0"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="1-15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump5rb1"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="16-30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump5rb2"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="31-45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump5rb3"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dump5rb4"
                        android:layout_weight="1" />

                </RadioGroup>

            </LinearLayout>

            <Space
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbalteredshot"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Altered Shot" />
                <CheckBox
                    android:id="@+id/cbpreventedclimb"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Prevented Climb" />
                <CheckBox
                    android:id="@+id/cbblockedpeg"
                    android:layout_width="wrap_content"
                    android:text="Blocked Peg"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other: "
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif" />
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/teleop_spinnerClimbingStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/climbing_stats_array" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="Climbing Stats"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fuel Dumped in Low Goal"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/teleop_buttonAddFuelDump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent"
                    android:background="?attr/selectableItemBackground"
                    android:text="ADD" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/teleop_recyclerViewFuelDumps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="High Goals" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterHighGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="Missed High Goals" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterMissedHighGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>